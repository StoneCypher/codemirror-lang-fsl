@top Program { expression* }

@skip { Space }





expression {

  Action     |
  String     |
  Atom       |
  BothArrow  |
  LeftArrow  |
  RightArrow |
  SemiDelim

}





@tokens {

  Atom       { $[a-zA-Z0-9]+ }

  BothArrow  { "<" $[-\~=] ">" }
  LeftArrow  { "<" $[-\~=]     }
  RightArrow {     $[-\~=] ">" }

  Space      { $[ \t\n\r]+ }
  SemiDelim  { ";" }

  Action     { "'" $[\x00-\x21\x23-\x5B\x5D-\uFFFF]+ "'" }
  String     { '"' $[\x20-\x26\x28-\x5B\x5D-\uFFFF]+ '"' }

}
