@top Program { expression* }

@skip { Space }





expression {

  Action     |
  Atom       |
  BothArrow  |
  LeftArrow  |
  RightArrow |
  SemiDelim

}





@tokens {

  Atom       { $[a-zA-Z0-9]+ }

  BothArrow  { "<" $[-\~=] ">" }
  LeftArrow  { "<" $[-\~=]     }
  RightArrow {     $[-\~=] ">" }

  Space      { $[ \t\n\r]+ }
  SemiDelim  { ";" }

  Action     { "'" $[\x20-\x26\x28-\x5B\x5D-\uFFFF]+ "'" }

}
